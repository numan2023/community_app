<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div class='account-page' id='account-page'>
    <div class='account-page__inner clearfix'>
      <div class='account-page__inner--left account-page__header'>
        <h1 class="h3 pt-3 pb-2 border-bottom">Edit : Your Account Info</h1>
      </div>
      <div class='account-page__inner--right user-form'>
        <%= form_with model: current_user, local: true do |f|%>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :nickname%>
            </div>
            <div class='field-input'>
              <%= f.text_field :nickname, autofocus: true%>
            </div>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :email%>
            </div>
            <div class='field-input'>
              <%= f.email_field :email%>
            </div>
          </div>

          <div class='field'>
            <div class='field-label'>
              <%= f.label :term%>
            </div>
            <div class='field-input'>
              <%= f.text_field :term, autofocus: true%>
            </div>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :hobby%>
            </div>
            <div class='field-input'>
              <%= f.text_field :hobby, autofocus: true%>
            </div>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :learn_reason%>
            </div>
            <div class='field-input'>
              <%= f.text_field :learn_reason, autofocus: true%>
            </div>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :career_pass%>
            </div>
            <div class='field-input'>
              <%= f.text_field :career_pass, autofocus: true%>
            </div>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :impressd_app%>
            </div>
            <div class='field-input'>
              <%= f.text_field :impressed_app, autofocus: true%>
            </div>
          </div>
          
          <div class='actions'>
            <%= f.submit "Update", class: 'btn btn-secondary btn-sm mt-3'%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>