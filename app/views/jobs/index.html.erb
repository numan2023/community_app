    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

      <h1 class="h3 pt-3 pb-2 border-bottom">Job : Chat Room</h1>
      <%= form_with(url: search_jobs_path, local: true, method: :get, class: "d-flex") do |form| %>
        <%= form.text_field :keyword, placeholder: "タイトルを検索する", class: "form-control me-2" %>
        <%= form.submit "検索", class: "btn btn-outline-success" %>
      <% end %>

      <% @jobs.each do |job| %>
        <% if job.user == current_user %>
          <div class="text-end">
            <div class="post border-bottom  w-100">
              <div class="post-date small">
                投稿者：<%= job.user.nickname %> 投稿日時：<%= l job.created_at %>
                <% if user_signed_in? && current_user.id == job.user_id %>
                  <%= link_to '編集', edit_job_path(job.id), class: "pb-3 mb-0 small lh-sm" %>
                <% end %>
              </div>
              <div class="post-title small">
                タイトル：<%= job.title %>
              </div>
              <div class="post-content">
                <%= job.content %>
              </div>
              <%= image_tag job.image.variant(resize: '500x500'), class: 'message-image' if job.image.attached?%>
            </div>
            <div id="like-btn<%= job.id %>">
              <%= render partial: "job_likes/like", locals: { job: job } %>
            </div>
          </div>
        <% else %>
          <div class="text-start">
            <div class="post border-bottom  w-100">
              <div class="post-date small">
                投稿者：<%= job.user.nickname %> 投稿日時：<%= l job.created_at %>
                <% if user_signed_in? && current_user.id == job.user_id %>
                  <%= link_to '編集', edit_job_path(job.id), class: "pb-3 mb-0 small lh-sm" %>
                <% end %>
              </div>
              <div class="post-title small">
                タイトル：<%= job.title %>
              </div>
              <div class="post-content">
                <%= job.content %>
              </div>
              <%= image_tag job.image.variant(resize: '500x500'), class: 'message-image' if job.image.attached?%>
            </div>
            <div id="like-btn<%= job.id %>">
              <%= render partial: "job_likes/like", locals: { job: job } %>
            </div>
          </div>
        <% end %>
      <% end %>

      <canvas class="my-4 w-100" id="myChart" width="900" height="300"></canvas>

      <%= form_with(model: @job, class: 'form sticky-bottom', local: true) do |f| %>
        <div class="form-title">
          <%= f.text_field :title, class: 'form-message', placeholder: 'タイトル' %>
        </div>
        <div class="form-input">
          <%= f.text_field :content, class: 'form-message', placeholder: 'テキスト：Tipsを投稿しよう!' %>
          <label class="form-image">
            <span class="image-file">画像</span>
            <%= f.file_field :image, class: 'hidden' %>
          </label>
        </div>
        <%= f.submit '送信', class: 'form-submit' %>
      <% end %>

    </main>